/**
* 英文站移动端的一些 hack
*/
.en {
  .home {
    &-desc__step {
      li {
        &:nth-child(1),
        &:nth-child(4) {
          .text {
            top: 22%;
          }
        }
        &:nth-child(3) {
          .text {
            top: 9%;
          }
        }
      }
    }

    &-desc__year li:first-child {
      margin-left: -30px;
    }
  }

  .token-con__sub .case-content li {
    word-break: break-all;
  }

  .home-desc__autochain {
    .text-1 {
      left: -132px;
    }
    .text-2 {
      right: -180px;
      width: 160px;
      margin-top: -26px;
    }
    .text-4 {
      right: -133px;
      width: 175px;
      margin-bottom: -34px;
    }
  }

  .business-model-autochain {
    .text-1 {
      left: 148px;
    }

    .text-2 {
      width: 180px;
      right: -122px;
    }

    .text-3 {
      right: -210px;
      width: 238px;
      top: 35%;
    }

    .text-6 {
      left: -22%;
      bottom: 15px;
      width: 125px;
    }

    .text-7 {
      width: 200px;
      left: -175px;
      top: 40%;
    }

    .text-8 {
      left: -107px;
      width: 160px;
    }
  }

  &.technology-superiority .switch-tab-item {
    white-space: normal;
  }
}
