@import './_const.styl';
@import './_util.styl';
@import './mobile-en.styl';

space=15px;

navTranstion(s=.35s, name=ease) {
  transition: all s name;
}

body {
  font-size: 12px;
  min-width: 100%;
  transition: none;
}

p {
  line-height: inherit;
}

html, body, .container {
  width: 100%;
  overflow-x: hidden;
  box-sizing: border-box;
}

.module {
  initSize();
  padding-left: space;
  padding-right: space;

  &-title {
    margin-top: 25px;
    h2 {
      font-size: 17px;
      line-height: 17px;
      &:after {
        height: 2px;
        margin-top: 5px;
      }
    }
  }
}


header {
  width: 100%;
  min-width: auto !important;

  #nav {
    .logo {
      left: 20px;
      margin-top: -25px;
    }

    .nav-item {
      display: flex;
      flex-direction: column;
      min-width: auto;
      left: 0;
      top: 100%;
      right: 0;
      height: auto;
      background-color: blackback;

      li {
        line-height: 42px;
        height: 42px;
        margin: 0 25px;
        a {
          font-size: 12px;
          color: black;
          text-align: center;
        }
        &:before {
          width: 0 !important;
        }
      }
    }

    .navbar-toggle {
      position: relative;
      z-index: 2;
      float: right;
      margin-right: 20px;
      padding: 4px 5px;
      margin-top: 26px;
      margin-bottom: 8px;
      background-color: transparent;
      background-image: none;
      border: 1px solid rgba(255, 255, 255, .6);
      border-radius: 4px;
      navTranstion();

      &:focus {
        outline: 0;
      }

      .icon-bar {
        display: block;
        width: 18px;
        height: 2px;
        border-radius: 1px;
        background-color: rgba(255, 255, 255, .8);
        navTranstion();
      }

      .icon-bar+.icon-bar {
        margin-top: 4px;
      }
    }
  }

  &.active {
    background-color: white;

    #nav {
      border-bottom: 1px solid #ddd;

      .navbar-toggle {
        border: 1px solid #ddd;
        navTranstion();

        .icon-bar {
          background-color: #888;
          navTranstion();
        }
      }

      .nav-item {
        background-color: white;
      }
    }
  }

  .language {
    .icon {
      right: 36%;
    }

    &-con {
      left: 110px;
      right: 110px;
      margin-top: 10px;
      background-color: white;
      color: black;
      padding: 5px 0;

      &-item {
        font-size: 12px;
        line-height: 28px;
      }

      &:before {
        content: '';
        display: inline-block;
        position: absolute;
        width: 12px;
        height: 8px;
        top: -8px;
        left: 50%;
        margin-left: -4px;
        background: url('../assets/二维码三角-icon@2x.png') no-repeat;
        background-size: 100%;
        transform: rotateZ(180deg);
      }
    }
  }
}

.home {
  &-banner {
    margin-left: -(space)px;
    margin-right: -(space)px;
    background-position-y: 74px;
    &-con {
      padding-top: 38px;
    }
    &-con__icon {
      width: 30%;
      margin-top: 0;
    }

    &-con__text {
      width: 80%;
      margin-top: 22px;
      padding: 8px 24px;
      // p {
      //   text-align: center;
      // }
    }
  }

  &-desc {
    h3 {
      margin-top: 15px;
      font-size: 15px
    }

    &__step,
    &__year {
      font-size: 10px;
    }
    &__points {
      zoom: .5;
    }

    &__step {
      margin-top: 13px;
      padding: 0 8px;

      li {
        width: 48px;
        font-size: 9px;
      }
    }

    &__year {
      top: -26px;

      li:first-child {
        margin-left: -37px;
      }
      li:last-child {
        margin-right: -38px;
      }
    }

    &__points {
      .arrow {
        width: 675px;
      }
    }

    &__autochain {
      margin-top: 40px;
      zoom: .4;

      .text-1 {
        margin-left: -40px;
        margin-top: -10px;
      }

      .text-2 {
        margin-left: -40px;
        margin-top: -10px;
      }

      .text-3 {
        margin-left: -18px;
        margin-bottom: -10px;
      }

      .text-4 {
        margin-right: -60px;
        margin-bottom: -10px;
      }
    }
  }
}

.business-model {
  &-autochain {
    zoom: .4;
    width: 445px;
    height: 445px;
    transform: translateY(20px);
  }
  &-desc {
    margin-top: 35px;
  }
}

.technology-superiority {
  .switch {
    &-tab {
      width: 600px;
      zoom: .45;
      margin-top: 60px;

      &-item {
        padding: 0;
      }
    }
    &-con {
      padding: 0 22px;
    }
  }
}

.token-con__sub {
  .title {
    font-size: 15px;
  }

  .desc {
    margin-top: 2px;
  }

  .case {
    line-height: 24px;
    margin-top: 3px;

    &-content {
      li {
        padding-left 13px;
        &:before {
          width: 4px;
          height: 4px;
          top: 9px;
        }
      }
    }
  }

  &:last-child {
    .title {
      margin-top: 24px;
    }
  }

  .pie {
    position: relative;
    display: inline-block;
    zoom: .5;
    left: 50%;
    margin-left: -141px;
    margin-top: 16px;

    &:before {
      font-weight: 700;
    }
  }
}

.team {
  &-title {
    font-size: 15px;
    margin: 15px 0;
  }

  &-con {
    &__item {
      flex-basis: 33.3333333%;
      height: 132px;

      .text {
        top: 0;

        .title {
          font-size: 12px;
          margin-top: 45px;
        }

        .desc {
          margin-top: 15px;
        }

        .desc,
        .identity {
          font-size: 8px;
        }
      }
    }
  }

  padding-bottom: 25px;
}

footer {
  font-size: f=8px;
  min-width: auto;

  #footer {
    .logo {
      left: 63px;
      top: 0;
      margin-top: 0;
      width: 77px;
    }

    .copy {
      font-size: inherit;
      padding-top: 0;
      line-height: f;
      display: inline-block;
      margin-top: 70px;
      margin-left: 15px;
    }

    .contact {
      top: auto;
      bottom: 19px;
      right: 32px;

      .wechat {
        background-image: url('../assets/wechat-icon-1@2x.png');
        .qrcode {
          left: 0;
        }
      }

      .weibo {
        margin-left: 20px;
        background-image: url('../assets/weibo-icon-1@2x.png');
        .qrcode {
          left: -3px;
        }
      }

      li {
        padding-left: 14px;
        background-size: 13px;
        margin-top: 0;
        height: 11px;

        &:before {
          font-size: inherit;
          line-height: f;
          float: left;
          margin-left: 2px;
          margin-top: 2px;
          color: main-color;
        }

        .qrcode {
          width: 45px;
          height: 45px;
          visibility: visible;
          opacity: 1;
          top: -52px;
        }
      }
    }
  }
}
