@import './tag-rewrite.styl';
@import './_const.styl';
@import './_util.styl';

body {
  color: white;
  font-size: 18px;
  min-width: 1024px;
  font-family: Microsoft Yahei, Avenir, Hiragino Sans GB, Microsoft Sans Serif,
  WenQuanYi Micro Hei, sans-serif;
  font-weight: 100;
  line-height: 1.5;
  position: relative;
  background-image: url('../assets/侧边栏-tp@2x.png'), url('../assets/body-background.png'); // background-repeat: no-repeat;
  background-position-y: 854px;
  background-size: 100%;
  transition: background-position-y .75s ease;
}

.container {
  min-height: 100vh;
}

.module {
  initSize();
  &-title {
    margin-top: 200px;
    text-align: center;
    h2 {
      font-weight: 100;
      font-size: 40px;
      line-height: 40px;
      display: inline-block;

      &:after {
        content: '';
        display: block;
        width: 100%;
        height: 4px;
        background-color: main-color;
        margin-top: 8px;
      }
    }
  }
}
