@import '../../../../styles/_const.styl';
@import '../../../../styles/_util.styl';

.home-model1 {
  display: flex;

  &-left {
    flex: 40;

    h3 {
      margin-top: 0!important;
      line-height: 3.25rem;
      afterLine(122px, 55px)
    }

    p {
      margin-top: 4em;
    }
  }

  &-right {
    flex: 60;
    margin-left: 10%;

    .video-con {
      overflow: hidden;
      border-radius: 8px;
    }

    .download {
      margin-top: 100px;
      display: block;
      text-align: center;

      &-button {
        background: url('../../../../assets/v2/下载icon.png') no-repeat 24px center;
        background-size: 34px;
        display: inline;
        border-radius: 6px;
        border: 2px solid main-color;
        color: main-color;
        font-size: 1.15em;
        padding: 7px 24px 7px 72px;
        transition: all .3s ease;

        &:hover {
          transition: all .3s ease;
          color: white;
          background-image: url('../../../../assets/v2/下载-5.png');
          background-color: main-hover-color;
        }
      }
    }
  }

}
